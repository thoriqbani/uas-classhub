<%- include('../partials/header') %>
<%- include('../partials/navbarGuru') %>
<%- include('../partials/message') %>
<style>
    .kebawah{
        margin-top: 230px;
    }
</style>
<div class="kebawah container">
    <div class="row mt-lg-n15 mt-md-n11 mt-n10">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
            <div class="card z-index-0">
                <div class="card-header text-center pt-4">
                    <h5>Edit Profile</h5>
                </div>

                <div class="card-body">
                    <form role="form text-left" action="/guru/editProfile" method="post"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <input type="text" class="form-control" id="nama" name="nama" placeholder="Name"
                                aria-label="Name" aria-describedby="email-addon">
                        </div>
                        <div class="mb-3">
                            <select class="form-control" id="jenis_kelamin" name="jenis_kelamin"
                                aria-label="Gender">
                                <option selected disabled>Select Gender</option>
                                <option value="laki-laki">Male</option>
                                <option value="perempuan">Female</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <input type="date" class="form-control" id="tanggal_lahir" name="tanggal_lahir"
                                placeholder="Tanggal Lahir" aria-label="Tanggal Lahir"
                                aria-describedby="email-addon">
                        </div>

                        <div class="mb-3">
                            <input type="text" class="form-control" id="no_hp" name="no_hp"
                                placeholder="No. HP" aria-label="No. HP" aria-describedby="email-addon">
                        </div>
                        <div class="mb-3">
                            <input type="file" class="form-control" id="photos" name="photos"
                                placeholder="Photos" aria-label="Photos" aria-describedby="email-addon">
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Password" aria-label="Password"
                                aria-describedby="password-addon">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Edit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>