<%- include('../partials/header') %>
<%- include('../partials/navbarGuru') %>
<%- include('../partials/message') %>
<style>
    .carousel-item {
        display: flex;
        justify-content: center;
    }

    .card {
        flex: 0 0 auto;
    }

    .swiper-pagination-bullet {
        background: #007bff;
        width: 12px;
        height: 12px;
        opacity: 1;
    }

    .swiper-pagination-bullet-active {
        background: #0056b3;
    }

    .gap {
        margin-right: 10px;
    }
</style>
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->
    <%- include('../partials/message.ejs') %>
    <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Basic Bootstrap Table -->
        <div class="row mb-5">
            <div class="mt-3 px-3 mb-3">
                <a>Tugas</a>
            </div>
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    <% for(var i=0; i < tugasList.length; i++) { %>
                        <div class="swiper-slide">
                            <div class="card mb-4 mx-2" style="width: 20rem;">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <h4>
                                            <%= tugasList[i].nama_mapel %>
                                        </h4>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><b>
                                                <%= tugasList[i].judul %>
                                            </b></span>
                                    </li>
                                    <li class="list-group-item"><a>Deskripsi : </a>
                                        <%= tugasList[i].deskripsi %>
                                    </li>
                                    <li class="list-group-item"><a>Deadline : <%= tugasList[i].tanggal_deadline %> <%= tugasList[i].waktu_deadline %></a></li>
                                    <li class="list-group-item"><a href="/upload/tugas_pdf/<%= tugasList[i].file_tugas %>" download="<%= tugasList[i].judul %>">Download Disini</a></li>
                                    <li class="list-group-item">
                                        <div class="mt-3 px-3 d-flex justify-content-between">
                                            <a href="/guru/detail/tugas/<%= tugasList[i].id %>" class="btn btn-sm btn-primary gap">Detail Tugas</a>
                                            <form action="/guru/tugas/delete/<%= tugasList[i].id %>" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-primary">Delete Tugas</button>
                                            </form>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    <% } %>
                </div>
                <!-- Add Pagination -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>

