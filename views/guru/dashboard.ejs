                                </ul>
                            </div>
                        </div>
                    <% } %>
                </div>
            
                <!-- Add Pagination if needed -->
                <div class="swiper-pagination swiper-pagination-materi"></div>
            
                
            </div>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var tugasSwiper = new Swiper('.swiper-container-tugas', {
            slidesPerView: 1,
            spaceBetween: 30,
            pagination: {
                el: '.swiper-pagination-tugas',
                clickable: true,
                renderBullet: function (index, className) {
                    return '<span class="' + className + '">' + (index + 1) + '</span>';
                },
            },
        });

        var materiSwiper = new Swiper('.swiper-container-materi', {
            slidesPerView: 1,
            spaceBetween: 30,
            pagination: {
                el: '.swiper-pagination-materi',
                clickable: true,
                renderBullet: function (index, className) {
                    return '<span class="' + className + '">' + (index + 1) + '</span>';
                },
            },
        });
    });
</script>
