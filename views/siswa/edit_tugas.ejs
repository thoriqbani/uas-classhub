        logoutLink.addEventListener('click', function() {
          logoutLink.classList.add('active');
        });
        const links = {
          'dashboard': document.getElementById('dashboard-link'),
          'materi': document.getElementById('materi-link'),
          'tugas': document.getElementById('tugas-link'),
          'profile': document.getElementById('profile-link')
        };
    
        if (links[currentPage]) {
          links[currentPage].classList.add('active');
        }
      });
    </script>

