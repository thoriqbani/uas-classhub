<style>
    .profile {
        display: flex;
        justify-content: center; /* Mengatur profil ke posisi tengah secara horizontal */
        align-items: center; /* Mengatur profil ke posisi tengah secara vertikal */
        margin-bottom: 20px; /* Jarak bawah antara profil dan card jadwal */
    }
    .profile-info img {
        border-radius: 50%; /* Membuat gambar bundar */
        width: 150px; /* Menyesuaikan ukuran gambar */
        height: 150px;
    }
    .profile-info h2 {
        text-align: center; /* Mengatur nama ke posisi tengah secara horizontal */
    }
    .schedule {
        display: grid; /* Menggunakan Grid Layout */
        grid-template-columns: repeat(3, 1fr); /* Membuat 3 kolom */
        gap: 20px; /* Jarak antara kartu */
        justify-items: center; /* Mengatur item di tengah secara horizontal */
        padding: 20px;
    }

    .card {
        background-color: #f57df5; /* Warna ungu */
        text-align: center;
        width: 100%; /* Sesuaikan lebar kartu dengan kolom */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .card-content {
        padding: 20px;
    }

    .card h3 {
        width: 100%;
        margin: 0;
        font-size: 20px;
        color: #ffffff;
        background-color: rgb(110, 99, 255); /* Warna biru untuk latar belakang judul */
        padding: 10px; /* Padding untuk memberikan ruang di sekitar teks */
        border-radius: 10px 10px 10px 10px ; /* Membulatkan sudut atas */
    }
    .card h4 {
        margin: 0;
        font-size: 18px;
        color: #fbff00;
    }
    .card p {
        margin: 5px 0;
        color: #000000;
    }
    .profile-info h6 {
        text-align: center; /* Mengatur nama ke posisi tengah secara horizontal */
    }
    .card a {
        text-decoration: none; /* Menghilangkan garis bawah pada tautan */
        color: inherit; /* Menggunakan warna teks yang ada */
    }
</style>

