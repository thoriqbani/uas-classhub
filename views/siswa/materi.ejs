<%- include('../partials/header') %>
    <%- include('../partials/navbar') %>
        <%- include('../partials/message') %>

            <div class="container mt-5">
                <h1>Materi</h1>
                <div>
                    <label for="mapelSelect">Pilih Mata Pelajaran:</label>
                    <select id="mapelSelect">
                        <option value="">--Pilih Mata Pelajaran--</option>
                        <% for(var i=0; i < mapel_list.length; i++) {%>
                            <option value="<%= mapel_list[i].id %>">
                                <%= mapel_list[i].nama_mapel %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <div id="materiList" class="mt-3 row">
                    <!-- Materi akan ditampilkan di sini -->

                </div>
            </div>

            <script>
                document.getElementById('mapelSelect').addEventListener('change', function () {
                    let mapelId = this.value;
                    fetch(`/siswa/materi/${mapelId}`)
                        .then(response => response.json())
                        .then(data => {
                            let materiList = document.getElementById('materiList');
                            materiList.innerHTML = '';
                            if (data.length > 0) {
                                data.forEach(materi => {
                                    let card = document.createElement('div');
                                    card.className = 'col-md-4 mt-2';

                                    let cardInner = `
                            <div class="content-wrapper">
                                <div class="container-xxl flex-grow-1 container-p-y">
                                    <!-- Basic Bootstrap Table -->
                                    <div class="row mb-5">
                                        <div class="card mb-4 mx-2" style="width: 20rem;">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <span><b>
                                                            ${materi.judul}
                                                        </b></span>
                                                </li>
                                                <p>Deskripsi : 
                                                    ${materi.deskripsi}
                                                </p>
                                                <li class="list-group-item">
                                                    <div class="mt-3 px-3">
                                                        <a href="/upload/materi_pdf/${materi.file_materi}" download="${materi.judul}"
                                                            class="btn btn-sm btn-primary">Download Materi</a>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <!--/ Basic Bootstrap Table -->
                            </div>
                        `;
                                    card.innerHTML = cardInner;
                                    materiList.appendChild(card);
                                });
                            } else {
                                let noData = document.createElement('div');
                                noData.className = 'col-12';
                                noData.textContent = 'Tidak ada materi untuk mata pelajaran ini.';
                                materiList.appendChild(noData);
                            }
                        })
                        .catch(error => console.error('Error:', error));
                });
            </script>

            </script>


            <%- include('../partials/footer') %>